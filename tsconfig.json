{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2018",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7",
	  "ES2018"
    ],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "**/*.ts"
  ]
}
